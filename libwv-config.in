#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: libwv-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
Libraries/Headers:
	wv
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_wv=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    wv)
      lib_wv=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

wv_cflags=""
wv_libs="-lwv @WMF_LIBS@ @XML_LIBS@ @GLIB_LIBS@ @ICONV_LIBS@ @PNG_LIBS@ @ZLIB_LIBS@ @LIBS@ -lm"

if test "$echo_cflags" = "yes"; then
	includes="$wv_cflags"
	if test "$lib_wv" = "yes"; then
		includes="$includes -I@includedir@"
	fi
	echo $includes
fi

if test "$echo_libs" = "yes"; then
	libdirs=-L@libdir@
	my_wv_libs=
	for i in $wv_libs ; do
		if test "x$i" != "x-L@libdir@" ; then
			if test -z "$my_wv_libs" ; then
				my_wv_libs="$i"
			else
				my_wv_libs="$my_wv_libs $i"
			fi
		fi
	done

	echo $libdirs $my_wv_libs
fi      
