#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@

# argument checking
if [ ${#} -ne "2" ]; then
        echo "Usage: ${0} <word document> <abiword output file>"
        exit 1
fi

which wvWare >/dev/null 2>&1
if [ ${?} -ne "0" ]; then
    echo "Could not find required program 'wvWare'"
    exit 1
fi

wvWare -x ${libdir}/wv/wvAbw.xml "${1}" > "${2}"
